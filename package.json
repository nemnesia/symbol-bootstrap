{
  "name": "@nemnesia/symbol-bootstrap",
  "description": "Symbol tool that allows you creating, configuring and running Symbol's networks",
  "version": "2.0.6",
  "author": "Nemneshia <@nemneshia>",
  "type": "module",
  "bin": {
    "sb": "bin/run.js",
    "symbol-bootstrap": "bin/run.js"
  },
  "bugs": "https://github.com/nemnesia/symbol-bootstrap/issues",
  "dependencies": {
    "@inquirer/prompts": "^7.3.2",
    "@noble/ed25519": "^1.5.3",
    "@oclif/core": "^4.5.3",
    "@oclif/plugin-autocomplete": "^3.2.34",
    "@oclif/plugin-help": "^6.2.32",
    "archiver": "^5.3.0",
    "cross-fetch": "^3.1.5",
    "figlet": "^1.8.0",
    "handlebars": "^4.7.7",
    "i18next": "^25.5.2",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "memorystream": "^0.3.1",
    "node-stream-zip": "^1.15.0",
    "rxjs": "^7.8.2",
    "semver": "^7.3.5",
    "shx": "^0.3.4",
    "symbol-sdk": "^2.0.5",
    "symbol-statistics-service-typescript-fetch-client": "^1.1.5",
    "tslib": "^2.3.1",
    "utf8": "^3.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@oclif/test": "^4.1.14",
    "@types/archiver": "^5.3.1",
    "@types/chai": "^5.0.1",
    "@types/figlet": "^1.7.0",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.178",
    "@types/memorystream": "^0.3.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.3",
    "@types/semver": "^7.3.9",
    "@types/sinon": "^10.0.9",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "chai": "^5.2.0",
    "coveralls": "^3.1.1",
    "create-ts-index": "^1.14.0",
    "dir-compare": "^4.0.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globby": "^10.0.2",
    "marked": ">=4.0.12",
    "mocha": "^11.1.0",
    "mocha-lcov-reporter": "^1.3.0",
    "mock-stdin": "^1.0.0",
    "nock": "^14.0.1",
    "nyc": "^15.1.0",
    "oclif": "^4.22.19",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "sinon": "^13.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typedoc": "^0.28.12",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "/config",
    "/presets",
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/nemnesia/symbol-bootstrap",
  "keywords": [
    "oclif"
  ],
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "oclif": {
    "bin": "symbol-bootstrap",
    "commands": "./lib/commands",
    "helpClass": "./lib/BootstrapHelp",
    "hooks": {
      "init": "./lib/hooks/init"
    },
    "plugins": [
      "@oclif/plugin-autocomplete",
      "@oclif/plugin-help"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nemnesia/symbol-bootstrap.git"
  },
  "scripts": {
    "clean": "npx shx rm -rf lib oclif.manifest.json tsconfig.tsbuildinfo",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "build": "npm run clean && npm run compile && npx oclif manifest",
    "lint": "eslint --cache src/ test/ --ext .ts",
    "lint:fix": "eslint src/ test/ --ext .ts --fix",
    "format": "prettier --check ./src ./test",
    "format:fix": "prettier --write ./src ./test",
    "style:fix": "npm run create-index-files && npm run format:fix && npm run lint:fix",
    "create-index-files": "cti create ./src -b -n -e commands",
    "test": "nyc --reporter=lcov --extension .ts mocha \"test/**/*.test.ts\"",
    "e2e": "nyc --reporter=lcov --extension .ts mocha -r ts-node/register --timeout 900000 --forbid-only \"test/**/*.e2e.ts\"",
    "coveralls-report": "cat ./coverage/lcov.info | coveralls",
    "publish:prd": "npm publish --access public",
    "publish:dry": "npm publish --access public --dry-run"
  },
  "types": "lib/index.d.ts",
  "volta": {
    "node": "24.8.0",
    "npm": "11.6.0",
    "yarn": "4.9.4"
  }
}
